{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend for the SSVE projet",
  "author": "UQAM-INM5151 pilote projet students",
  "private": true,
  "scripts": {
    "frontend": "cd ../frontend && ng serve",
    "build": "rimraf dist && tsc -p tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register test/**/*.ts",
    "prisma:init": "prisma init",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "prisma:generate": "prisma generate",
    "backend": "cross-env NODE_ENV=development nodemon",
    "prod:backend": "cross-env NODE_ENV=production node dist/server.js",
    "start": "npm run build && cross-env NODE_ENV=production node --enable-source-maps dist/server.js",
    "format": "prettier --write \"**/*.{js,json,css,md,html,ts}\""
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "axios": "^1.3.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "express-mysql-session": "^2.1.8",
    "express-session": "^1.17.3",
    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "prisma": "^4.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.2",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.5.0",
    "typedi": "^0.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.16",
    "@types/express-mysql-session": "^2.1.3",
    "@types/express-session": "^1.17.5",
    "@types/hpp": "^0.2.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.3",
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.7.18",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "node-config": "^0.0.2",
    "nodemon": "^2.0.19",
    "prettier": "2.8.4",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
